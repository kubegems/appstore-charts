{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "type": "string",
      "title": "RabbitMQ exporter名称",
      "form": true
    },
    "fullnameOverride": {
      "type": "string",
      "title": "RabbitMQ Exporter服务名",
      "form": true
    },
    "rabbitmq": {
      "type": "object",
      "title": "RabbitMQ 设置",
      "form": true,
      "properties": {
        "url": {
          "type": "string",
          "title": "RabbitMQ 连接地址",
          "form": true,
          "default": "http://rabbitmq:15672"
        },
        "user": {
          "type": "string",
          "title": "RabbitMQ 访问用户",
          "form": true,
          "default": "Admin"
        },
        "password": {
          "type": "string",
          "title": "RabbitMQ 用户密码",
          "form": true,
          "default": "password"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "title": "RabbitMQ 监控数据采集器设置",
      "form": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用自动采集器(需Prometheus Operator支持)",
          "default": true,
          "form": true
        },
        "interval": {
          "type": "string",
          "title": "监控数据采样频率",
          "default": "60s",
          "form": true
        },
        "timeout": {
          "type": "string",
          "title": "监控数据采样超时",
          "default": "10s",
          "form": true
        }
      }
    },
    "prometheusRule": {
      "type": "object",
      "title": "RabbitMQ 告警设置(需Prometheus Operator支持)",
      "form": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用平台内置 Redis 告警规则",
          "default": true,
          "form": true
        }
      }
    }
  }
}